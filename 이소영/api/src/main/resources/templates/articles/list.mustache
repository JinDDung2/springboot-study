{{> layouts/header}}
<div id="wrapper" class="container mt-3">
    <div id="pageTitle">
        <h1>게시글 목록</h1>
    </div>
    <table class="table">
        <thead>
        <tr style="background-color: #fff7e9;">
            <th scope="col">Id</th>
            <th scope="col">Title</th>
            <th scope="col">Content</th>
            <th scope="col">Writer</th>
        </tr>
        </thead>
        <tbody>
        {{# articles}}
        <tr>
            <td>{{id}}</td>
            <td>{{title}}</td>
            <td>{{content}}</td>
            <td>{{writer}}</td>
        </tr>
        {{/ articles}}
        {{^ articles}}
            <div> 현재 등록된 게시글이 없습니다. </div>
        {{/articles}}
        </tbody>
    </table>
</div>
{{> layouts/footer}}